{
    "name": "nuevastecnologias/mesa-de-ayuda",
    "description": "Sistema de gestión de tickets de soporte técnico",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Equipo Nuevas Tecnologías"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpmd/phpmd": "^2.13",
        "sebastian/phpcpd": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 . --ignore=vendor/,js/",
        "phpmd": "phpmd . text cleancode,codesize,controversial,design,naming,unusedcode --exclude vendor/,js/",
        "phpcpd": "phpcpd . --exclude vendor --exclude js",
        "check": [
            "@phpcs",
            "@phpmd",
            "@phpcpd"
        ]
    }
}